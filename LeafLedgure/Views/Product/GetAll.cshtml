@model IEnumerable<LeafLedgure.Models.Domain.Product>
@{
  
}
<div class="container pt-3">
    <div class="row">
        <div class="col-md-12 mb-3">
            <a class="btn btn-dark" href="/Product/Add">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Products</h3>

            <table class="table table-stripped table-bordered table-light">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Isbn</th>
                        <th>Total Pages</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreName</td>
                            <td>@item.Isbn</td>
                            <td>@item.TotalPages</td>
                            <td>@item.AuthorName</td>
                            <td>@item.PublisherName</td>
                            <td>
                                <a class="btn btn-success" href="/Product/Update?id=@item.Id">Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Product/Delete?id=@item.Id"> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

