@model IEnumerable<LeafLedgure.Models.Domain.Genre>
@{
  
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-outline-dark mb-3" href="/Genre/Add">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Genres</h3>

            <table class="table table-stripped table-bordered table-light">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.GenreName</td>
                            <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id"> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

