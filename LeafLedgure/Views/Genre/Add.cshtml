@model LeafLedgure.Models.Domain.Genre
@{
  
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Genre</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="GenreName">Name</label>
                    <input type="text" class="form-control" asp-for="GenreName" required/>
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">@TempData["msg"]</div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-light"> Save</button>
                    <a href="/Genre/GetAll" class="btn btn-primary"> List</a>
                </div>

            </form>
        </div>
    </div>
</div>


